{
  "compilerOptions": {
    "target": "es6",
    // DOM required for text decoder typings.
    "lib": ["es2016", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "stripInternal": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../lib",
    "declaration": true,
    "declarationDir": "../dts",
    "sourceMap": true
  }
}
